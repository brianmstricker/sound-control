{
 "version": "1.0",
 "manifest_version": 3,
 "name": "Sound Control",
 "description": "Sound Control is a Chrome Extension that allows you to control the sound of tabs.",
 "action": {
  "default_popup": "index.html",
  "default_title": "Sound Control"
 },
 "permissions": ["tabs", "activeTab", "storage"],
 "background": {
  "service_worker": "background.js",
  "type": "module"
 },
 "host_permissions": ["http://*/*", "https://*/*"]
}
